<div class="" id="fig-contain">
    <div class="" id="info-box">
        <div id="app-desc">
            <div class="results-wrapper">
                <div class="results-container">
                    <h2 id="results-title">Results</h2>
                    <div class="result-placer">
                        <div class="form-container">
                                <div class="center-results">
                                    {{#each results as |result|}}
                                    <div class="display-container">
                                        <div class="image-container">
                                            <img src="/assets/images/car-placeholder.jpg" alt="This is an image of a car" class="vehicle-image"></img>
                                            <div class="vehicle-favorite">Favorite Vehicle<i class="fa-solid fa-heart results-heart" id="{{id}}"></i></div>                                            
                                        </div>
                                        <div class="content-container">
                                            <div class="car-header"><span class="car-make">{{make}}</span><span class="car-model">{{model}}</span><span class="car-year">{{year}}</span></div>
                                            <div class="car-data1">Drive Type: <span class="car-drive">{{drive}}</span> Trans: <span class="car-trans">{{trans}}</span></div>
                                            <div class="car-data2"># of cylinders: <span class="car-cyl">{{cylinders}}</span> MPG: <span class="car-mpg">{{mpg}}</span></div>
                                        </div>
                                    </div>
                                    {{/each}}
                                </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="./js/favorites.js"></script>
<script src="https://code.jquery.com/jquery-3.6.1.min.js"></script>
